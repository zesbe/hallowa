# VPS Service Environment Variables
# Copy this to .env and fill with your actual values

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_redis_token_here"

# Optional: Port (auto-populated on Railway)
PORT=3000

# Node Environment
NODE_ENV=production

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Internal API Key (Required for Edge Function authentication)
# Generate a secure random key: openssl rand -hex 32
INTERNAL_API_KEY=your_internal_api_key_here_minimum_32_characters
